generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ClientType {
  SAVINGS
  CHECKING
}

model Client {
  id        String     @id @default(uuid())
  name      String
  birthday  String     // Format: "MM / DD / YYYY"
  type      ClientType // "Savings" | "Checking"
  account   String     @unique // 13-digit number
  balance   Decimal    @db.Decimal(10, 2) // Format: "$X,XXX.XX"
}
